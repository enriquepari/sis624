<% include partials/_header %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= task._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="nombre" value="<%= task.name %>">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="monto" placeholder="monto" value="<%= task.monto %>">
            </div>
            <button class="btn btn-primary" type="submit">
              actualizar 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

